{
    "name": "rardir",
    "version": "1.0.6",
    "author": "Max Zakharzhevskiy",
    "description": "Utility to pack meta data inside specified folders.",
    "license": "MIT",
    "main": "dist/cli.js",
    "bin": "dist/cli.js",
    "files": [
        "dist/**/*"
    ],
    "engines": {
        "node": ">=10.16.0"
    },
    "keywords": [
        "utility",
        "winrar",
        "javascript",
        "typescript"
    ],
    "repository": {
        "type": "git",
        "url": "git+https://github.com/maxzz/rardir.git"
    },
    "bugs": {
        "url": "https://github.com/maxzz/rardir/issues"
    },
    "type": "module",
    "devDependencies": {
        "@rollup/plugin-commonjs": "^28.0.6",
        "@rollup/plugin-json": "^6.1.0",
        "@rollup/plugin-node-resolve": "^16.0.1",
        "@types/minimist": "^1.2.5",
        "@types/node": "24.3.0",
        "builtin-modules": "^5.0.0",
        "nexe": "4.0.0-rc.6",
        "pkg": "^5.8.1",
        "rollup": "^4.50.0",
        "ts-node": "^10.9.2",
        "tsup": "^8.5.0",
        "typescript": "^5.9.2"
    },
    "dependencies": {
        "minimist": "1.2.8",
        "node-chalk": "^5.3.2",
        "rimraf": "^6.0.1"
    },
    "scripts": {
        "tsc": "tsc -w",
        "tt": "p ts-node src/index.ts --esm",
        "build": "pnpm tsup",
        "_build": "rm -rf dist && tsc && rollup -c",
        "_prepublish": "pnpm build",
        "exe-no": "pnpm build && pkg -o rardirj24 dist/all.mjs -t node18-win-x64",
        "ne2-no": "pnpm build && nexe -o rardirj25.exe -i dist/all.mjs --build",
        "ne3-no": "pnpm build && nexe -o rardirj25.exe -i dist/all.mjs -t host --build",
        "ne-no": "pnpm build && nexe -o rardirj25.exe -i dist/all.mjs -t windows"
    }
}