{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "moduleResolution": "node",
        "noEmit": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
    },
    "ts-node": {
        // Tell ts-node CLI to install the --loader automatically, explained below
        "esm": true
    },
    "include": [
        "src"
    ],
}