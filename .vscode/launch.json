    "version": "0.2.0",
    "configurations": [
        {
            "name": "ts-node",
            "type": "node",
            "request": "launch",
            "runtimeArgs": [
                "${workspaceRoot}/node_modules/ts-node/dist/bin.js",
                // "${workspaceRoot}/node_modules/ts-node/dist/bin-esm.js",
                // "${workspaceRoot}/node_modules/ts-node/dist/bin.js", "--esm"
                // "${workspaceRoot}/node_modules/ts-node/dist/bin.js", "--loader", "ts-node/esm",
                // "-r", // "ts-node/register",
            ],
            "args": [
                "${workspaceRoot}/src/index.ts"
            ],
            "cwd": "${workspaceRoot}/src",
        },
        {
            "name": "tsx",
            "type": "node",
            "request": "launch",
            // Debug current file in VSCode
            "program": "${workspaceFolder}/src/index.ts",
            //"program": "${file}",
            /*
            * Path to tsx binary
            * Assuming locally installed
            */
            "runtimeExecutable": "tsx",
            /*
            * Open terminal when debugging starts (Optional)
            * Useful to see console.logs
            */
            "console": "integratedTerminal",
            "internalConsoleOptions": "neverOpen",
            // Files to exclude from debugger (e.g. call stack)
            "skipFiles": [
                // Node.js internal core modules
                "<node_internals>/**",
                // Ignore all dependencies (optional)
                "${workspaceFolder}/node_modules/**",
            ],
        },        
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            // "program": "${workspaceFolder}/dist/all.mjs",
            "program": "${workspaceFolder}/dist/src/index.js",
